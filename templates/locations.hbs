<!DOCTYPE html>
<html lang="en">
    <head>
        {{>head }}
        <title>Favorite Chicken & Ribs Kilburn</title>
    </head>
    <body id="body">
        {{>header}}
        {{>breadcrumb}}
        {{>hero}}
        {{>location_information}}
        {{>about}}
        {{>food_list}}
        {{>favorite_food}}
        {{>app_promotion}}
        {{>faq}}
        {{>nearby}}
        {{>footer}}
        <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.0.7/dist/js/splide.min.js"></script>
        <script>
            function myFunction() {
                document.getElementById("body").classList.toggle("menu-opened");
            }
            document.getElementById("menu-btn").onclick = myFunction;
            var ourFoodSplide = new Splide('#food-list', {
                perPage: 4,
                perMove: 1,
                pagination: false,
                lazyLoad: 'nearby',
                type: 'loop',
                breakpoints: {
                    1279: {
                        perPage: 3,
                    },
                    767: {
                        perPage: 2,
                    },
                    575: {
                        perPage: 1,
                        focus: 'center',
                        padding: '45px',
                    }
                },
            });
            ourFoodSplide.mount();
            
            var favoriteFoodSplide = new Splide('#favorite-food', {
                perPage: 4,
                perMove: 1,
                pagination: false,
                lazyLoad: 'nearby',
                type: 'loop',
                breakpoints: {
                    1279: {
                        perPage: 3,
                    },
                    767: {
                        perPage: 2,
                    },
                    575: {
                        perPage: 1,
                        focus: 'center',
                        padding: '45px',
                    }
                },
            });
            favoriteFoodSplide.mount();
            
            var splide2 = new Splide('#splide-nearby', {
                perPage: 3,
                perMove: 1,
                arrows: false,
                drag: false,
                pagination: false,
                lazyLoad: 'nearby',
                breakpoints: {
                    1279: {
                        perPage: 2,
                        drag: true,
                        pagination: true,
                        type: 'loop',
                    },
                    575: {
                        perPage: 1,
                    },
                },
            });
            splide2.mount();
            
            
            var acc = document.getElementsByClassName("faq-block");
            var i;
            for (i = 0; i < acc.length; i++) {
                const faqContent = acc[i];	
                const faqTitle = acc[i].querySelector(".faq-title");
                faqTitle.addEventListener("click", function() {		
					
                    let parent = this.parentNode;
                    if(parent.classList.contains("opened")){
                        faqContent.classList.remove("opened");
                        }else{
                        for (s = 0; s < acc.length; s++) { 			
                            acc[s].classList.remove("opened");			
                        }
                        faqContent.classList.add("opened");
                    }
                    
                });
            }
        </script>
    </body>
</html>